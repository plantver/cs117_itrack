<Page
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:chart="nativescript-ui-chart">

    <ActionBar class="action-bar">
        <!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Display"></Label>
    </ActionBar>
    <DockLayout class="page-content" width="100%" height="85%" backgroundColor="white" stretchLastChild="false">
        <Button dock="bottom" text="Display 2.4GHz Band Channel Info" tap="onDisplayTap" class="btn btn-primary btn-active" />
        <ActivityIndicator dock="top" busy="{{ isLoading }}" width="45" height="45" />
        
        <chart:RadCartesianChart dock="bottom" class="m-b-10" height="500">
      <chart:RadCartesianChart.series >
        <chart:AreaSeries
          legendTitle="{{ top0_network }}"
          items="{{ network_channels }}"
          categoryProperty="frequency"
          valueProperty="signal_strength_0"
          stackMode="Stack">
            <chart:AreaSeries.labelStyle>
                <chart:PointLabelStyle margin="10" fontStyle="Bold" fillColor="#60B3FC" textSize="10" textColor="White" />
            </chart:AreaSeries.labelStyle>
            
        </chart:AreaSeries>
        <chart:AreaSeries
          legendTitle="{{ top1_network }}"
          items="{{ network_channels }}"
          categoryProperty="frequency"
          valueProperty="signal_strength_1"
          stackMode="Stack">
          <chart:AreaSeries.labelStyle>
               <chart:PointLabelStyle margin="10" fontStyle="Bold" fillColor="#FC6060" textSize="10" textColor="White" />
           </chart:AreaSeries.labelStyle>
        </chart:AreaSeries>
        <chart:AreaSeries
          legendTitle="{{ top2_network }}"
          items="{{ network_channels }}"
          categoryProperty="frequency"
          valueProperty="signal_strength_2"
          stackMode="Stack">
          <chart:AreaSeries.labelStyle>
               <chart:PointLabelStyle margin="10" fontStyle="Bold" fillColor="#00cc44" textSize="10" textColor="White" />
           </chart:AreaSeries.labelStyle>
          
        </chart:AreaSeries>
        <chart:AreaSeries
          legendTitle="{{ top3_network }}"
          items="{{ network_channels }}"
          categoryProperty="frequency"
          valueProperty="signal_strength_3"
          stackMode="Stack">
          <chart:AreaSeries.labelStyle>
               <chart:PointLabelStyle margin="10" fontStyle="Bold" fillColor="#ff8c1a" textSize="10" textColor="White" />
           </chart:AreaSeries.labelStyle>
        </chart:AreaSeries>
               
      </chart:RadCartesianChart.series>
      <chart:RadCartesianChart.horizontalAxis>
                <chart:CategoricalAxis labelFitMode="Rotate"/>
            </chart:RadCartesianChart.horizontalAxis>
            <chart:RadCartesianChart.verticalAxis>
                <chart:LinearAxis labelLayoutMode="Outer" minimum="0" maximum="100"/>
            </chart:RadCartesianChart.verticalAxis>
      <chart:RadCartesianChart.legend>
        <chart:RadLegendView position="Top"  height="110" enableSelection="true"/>
      </chart:RadCartesianChart.legend>
    </chart:RadCartesianChart>
    <Label dock="bottom" width="46%" text="(Relative Signal Strength %)"/>
    <Label dock="bottom" width="47%" text="2.4GHz Band Network Channels"/>
    </DockLayout>
</Page>
 