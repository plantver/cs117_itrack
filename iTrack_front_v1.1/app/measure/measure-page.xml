<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Measure"></Label>
    </ActionBar>

    <DockLayout width="90%" height="85%" backgroundColor="white" stretchLastChild="false">
			<TextField dock="top" width="95%" text="{{ textRoomName }}" hint="ENTER CURRENT ROOM NAME (ex. BOEL2444) ..." 
                        returnKeyType="Done" returnPress="onReturnPress"
                        blur="onBlur" focus="onFocus" class="input input-border"/>
            <Button dock="top" width="60%" text="Measure" tap="onMeasureTap" class="btn btn-primary btn-active" />
            <TextView dock="top" editable="false">
                <FormattedString>
                    <Span text="Now set to measure for: " />
                    <Span text="{{ roomName }}" fontWeight="Bold" />
                </FormattedString>
            </TextView>
            
            <ActivityIndicator dock="top" busy="{{ isLoading }}" width="75" height="75" />
            
            <ListView dock="top" row="15" items="{{ formatted_display }}" class="list-group">
            </ListView>
            <!--<ListView dock="top" class="list-group" items="{{ measurements }}" style="height:1000px">
				<ListView.itemTemplate>
					<FlexboxLayout flexDirection="row" class="list-group-item">
						<Label text="{{ test_list }}" class="list-group-item-heading" verticalAlignment="center" style="width: 40%" />
                        <!--<Label text="{{ datetime }}" class="list-group-item-heading" verticalAlignment="center" style="width: 40%" />
					</FlexboxLayout>
				</ListView.itemTemplate>
			</ListView>-->
            <Button dock="bottom" width="60%" text="Upload" tap="onUploadTap" class="btn btn-primary btn-active" />
		</DockLayout>
</Page>
