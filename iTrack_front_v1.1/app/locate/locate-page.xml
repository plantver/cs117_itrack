<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:chart="nativescript-ui-chart">

    <ActionBar class="action-bar">
        <!-- 
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!-- 
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Locate"></Label>
    </ActionBar>
    <DockLayout class="page-content" width="100%" height="85%" backgroundColor="white" stretchLastChild="false">
        <!--<Label dock="top" class="page-icon fa" text="&#xf015;"></Label>-->
        <ActivityIndicator dock="top" busy="{{ isLoading }}" width="60" height="60" />
        <Button dock="top" text="Locate" tap="onLocateTap" class="btn btn-primary btn-active" />
        <ListView dock="top" width="80%" row="4" vertical-align="middle" items="{{ formatted_display }}" class="list-group" />
        <!-- <Label dock="left" rotate="90" text="Signal Strength (%)"/> -->
        <Label dock="bottom" width="25%" text="Network SSID"/>
        <chart:RadCartesianChart dock="bottom" class="m-b-5" height="400">
        <chart:RadCartesianChart.series>
        <chart:BarSeries
            items="{{ top_networks }}"
            categoryProperty="ID"
            valueProperty="SIG_STRENGTH"
            showLabels="true">
            <chart:BarSeries.horizontalAxis>
                <!-- <chart:LinearAxis labelFitMode="Rotate"/> -->
                <chart:CategoricalAxis /><!-- textWrap="true" textWrap:true labelMargin="20" labelFitMode="Multiline"/> -->
            </chart:BarSeries.horizontalAxis>
            <chart:BarSeries.verticalAxis>
                <!-- <chart:CategoricalAxis labelFitMode="Multiline" /> -->
                <chart:LinearAxis minimum="0" maximum="100"/> <!-- labelFitMode="Rotate" /> -->
            </chart:BarSeries.verticalAxis>
        </chart:BarSeries>
        </chart:RadCartesianChart.series>
        </chart:RadCartesianChart>
        <Label dock="bottom" width="47%" text="Signal Strength (%) of Top Networks"/>
    </DockLayout>
</Page>
