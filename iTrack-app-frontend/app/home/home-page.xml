<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

	<ActionBar title="RadSideDrawer!" class="action-bar">
		<ActionBar.actionItems>
			<ActionItem>
				<ActionItem.actionView>
					<StackLayout>
						<Button class="fa" text="&#xf0c9;" fontSize="20" tap="onDrawerButtonTap"></Button>
					</StackLayout>
				</ActionItem.actionView>
			</ActionItem>
		</ActionBar.actionItems>
	</ActionBar>

	<GridLayout class="page-content">
		<Label class="page-icon fa" text="&#xf015;"></Label>
		<Label class="page-placeholder" text="<!-- Page content goes here -->"></Label>
	</GridLayout>
</Page>